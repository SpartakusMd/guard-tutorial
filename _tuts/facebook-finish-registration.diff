+    public function finishRegistration(Request $request)
+    {
+        // stored in the session in FacebookAuthenticator
+        /** @var FacebookUser $facebookUser */
+        $facebookUser = $request->getSession()->get('facebook_user');
+        if (!$facebookUser) {
