+<?php
+
+namespace AppBundle\Security\Helper;
+
+use AppBundle\OAuth\FinishRegistrationException;
+use Symfony\Component\HttpFoundation\RedirectResponse;
+use Symfony\Component\HttpFoundation\Request;
+use Symfony\Component\Security\Core\Exception\AuthenticationException;
+
+/**
+ * Use this trait if sometimes your authenticator requires people
+ * to "finish registration" before logging in.
+ */
+trait FinishRegistrationBehavior
+{
+    /**
+     * Should we send the user to finish registration?
+     *
+     * @param AuthenticationException $e
+     * @return bool
+     */
+    protected function requiresFinishRegistration(AuthenticationException $e)
+    {
+        return $e instanceof FinishRegistrationException;
+    }
+
+    /**
+     * Call this from within your onAuthenticationFailure() method.
+     *
+     * @param string $registrationUrl
+     * @param Request $request
+     * @param FinishRegistrationException $e
+     * @return RedirectResponse
+     */
+    protected function sendToFinishRegistration($registrationUrl, Request $request, FinishRegistrationException $e)
+    {
+        // save the user information!
+        $request->getSession()->set('guard.finish_registration.user_information', $e->getUserInformation());
+
+        return new RedirectResponse($registrationUrl);
+    }
+}
